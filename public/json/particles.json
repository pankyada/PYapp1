{
  "particles":{
    "number":{
      "value":100
    },
    "shape":{
      "type":"circle",
      "stroke":{
        "width":2,
        "color":"darkgreen"
      }
    },
    "opacity":{
      "value":0.5,
      "random":true,
      "anim":{
        "enable":false,
        "speed":5
      }
    },
    "size":{
      "value":5,
      "random":false,
      "anim":{
        "enable":true,
        "speed":30
      }
    },
    "line-linked":{
      "enable":true,
      "distance":2000,
      "color":"green"
    },
    "move":{
      "enable":true,
      "speed":3,
      "direction":"none",
      "straight":false
    }
  },

  "interactivity":{
    "events":{
      "onhover":{
        "enable":true,
        "mode":"repulse"
      },
      "onclick":{
        "enable":true,
        "mode":"push"
      }
    },
    "modes":{
      "repulse":{
        "distance":40,
        "duration":0.4
      },
      "bubble":{
        "distance":30,
        "size":10
      }
    }
  }
}
